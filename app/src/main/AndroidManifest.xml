<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cedricakrou.artisanat">

    <!-- Allows internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ArtisanatApplication"
        android:allowBackup="true"
        android:icon="@drawable/icone"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/ArtisanatTheme">
        <activity
            android:name=".presentation.features.splash.ui.SplashActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.features.onboarding.ui.OnboardingActivity" />
        <activity android:name=".presentation.features.signIn.ui.SignInActivity" />
        <activity android:name=".presentation.features.signUp.ui.SignUpActivity" />
        <activity android:name=".presentation.features.codeOtp.ui.CodeOtpActivity" />

        <activity android:name=".presentation.features.home.ui.HomeActivity" />
        <activity android:name=".presentation.features.announcement.ui.AnnouncementActivity" />
        <activity android:name=".presentation.features.myAnnouncements.MyAnnouncementsActivity" />
    </application>

</manifest>