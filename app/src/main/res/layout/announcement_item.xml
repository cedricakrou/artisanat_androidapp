<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="2sp"
        android:layout_marginBottom="10sp"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="20sp">

            <TextView
                android:id="@+id/tv_announcements_reference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12sp"
                android:text="xcvnnb"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7sp"
                android:layout_toEndOf="@id/tv_announcements_reference"
                android:text="-"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_announcements_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/separator"
                android:text="12/08/2019"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_announcements_date"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10dp"
                android:text="Par: "
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_announcements_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_announcements_date"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/client"
                android:text="Nom Client"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_announcements_client"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10dp"
                android:text="Titre: "
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_announcements_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_announcements_client"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/client"
                android:text="Nom Client"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_announcements_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="3sp"
                android:background="@drawable/capsule_ask_booking"
                android:drawableStart="@drawable/ic_timer"
                android:paddingRight="5dp"
                android:text="demande"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_announcements_title"
                android:text="Description"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_announcements_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="100sp"
                android:text="20"
                android:textSize="20sp" />


            <ImageButton
                android:id="@+id/idCallUser"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_below="@id/tv_announcements_speciality"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="40sp"
                android:background="@drawable/style_bouton_blue"
                android:src="@drawable/ic_call_black_24dp" />


            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="3sp"
                android:background="@android:color/white"
                android:src="@drawable/ic_baseline_navigate_next_24" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>